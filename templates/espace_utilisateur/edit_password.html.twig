{% extends 'vendeur.html.twig' %}

{% block title %}Mettre à jour votre mot de passe
{% endblock %}

{% block bg %}{% endblock %}

{% block colleft %}4
{% endblock %}

{% block colright %}8
{% endblock %}

{% block sidebar %}

{% include "espace_utilisateur/composants/_sidebar_avatar.html.twig" %}
{{ parent() }}
{% endblock %}

{% block body %}

{{ form_start(resetForm) }}

<div class="box shadow-sm rounded bg-white mb-3">
	<div class="box-title p-3 text-left bg-dark rounded">
		<h4 class="mb-0 text-light">
			Mettre à jour votre mot de passe
		</h4>
	</div>
	<div class="box-body p-3">
		<div class="row">
			<div class="col-sm-12">

				<h6 class="font-weight-bold">Nouveaux accès</h6>

				<p>Vous serez automatiquement déconnecter après avoir mis à jour vos accès.</p>

				{{ form_row(resetForm.plainPassword) }}

				<div class="row">
					<div class="col-sm-6">
						<div class="form-group">
							<div class="">
								<button type="submit" class="btn btn-dark rounded-btn btn-block">Mettre à jour</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{{ form_end(resetForm) }}

{% endblock %}