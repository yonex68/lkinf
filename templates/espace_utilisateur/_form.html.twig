{{ form_start(form) }}

<div class="box shadow-sm rounded bg-white mb-3">
   <div class="box-title p-3 text-left bg-dark rounded">
      <h4 class="mb-0 text-light">
         Information du compte
      </h4>
   </div>
   <div class="box-body p-3">
      <div class="form-group row">
         <div class="col-sm-6">
            {{ form_row(form.nom) }}
         </div>

         <div class="col-sm-6">
            {{ form_row(form.prenom) }}
         </div>
      </div>
      <div class="form-group">
         {{ form_row(form.genre) }}

         {{ form_row(form.imageFile) }}
      </div>

      <div class="form-group">
         {{ form_row(form.email) }}
      </div>

      {% include "espace_utilisateur/composants/_position.html.twig" %}

      <div class="form-group">
         {{ form_row(form.adresse) }}
      </div>

      <div style="visibility: hidden;height:1px;">
         {{ form_row(form.ville) }}

         {{ form_row(form.etat) }}

         {{ form_row(form.pays) }}
      </div>

      <div class="form-group row">
         <div class="col-sm-6">
            {{ form_row(form.telephone) }}
         </div>
      </div>

      <div class="form-group">
         {{ form_row(form.apropos) }}
      </div>
      <div class="form-group">
         <button type="submit" class="btn btn-success">Enregistrer les changements</button>
      </div>
   </div>
</div>

{{ form_end(form) }}