{% extends 'vendeur.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block bg %}{% endblock %}

{% block colleft %}4
{% endblock %}

{% block colright %}8
{% endblock %}

{% block sidebar %}

<div class="sidebar-fix mb-3">
	<div class="box mb-3 shadow-sm rounded bg-white profile-box text-center">
		<div class="p-4">
			{% if app.user.avatar %}
			<img class="img-fluid rounded-circle"
				src="{{ vich_uploader_asset(app.user, 'imageFile') | imagine_filter('identite_size') }}" alt='' />

			{% else %}

			<img class="img-fluid rounded-circle" src="{{ asset('img/user.jpg') | imagine_filter('identite_size') }}"
				alt='' />

			{% endif %}
		</div>
		<div class="p-3 border-top border-bottom">
			<h5 class="font-weight-bold text-dark mb-1 mt-0 text-left">{{ app.user.nom }}
				{{ app.user.prenom }}</h5>
			<p class="mb-0 text-muted text-left">{{ app.user.apropos|raw }}</p>
		</div>

		<div class="p-3">
			<div class="d-flex align-items-top mb-2">
				<p class="mb-0 text-muted"><i class="fa fa-thumbs-up"></i> Avis positif</p>
				<p class="text-dark mb-0 mt-0 ml-auto">{{ avispositif(app.user)|length }}</p>
			</div>
			<div class="d-flex align-items-top mb-2">
				<p class="mb-0 text-muted"><i class="fa fa-thumbs-down"></i> Avis négatif</p>
				<p class="text-dark mb-0 mt-0 ml-auto">{{ avisnegatif(app.user)|length }}</p>
			</div>
			<div class="d-flex align-items-top mb-2">
				<p class="mb-0 text-muted"><i class="fa fa-cart-plus"></i> Commandes en cours</p>
				<p class="text-dark mb-0 mt-0 ml-auto">{{ commandeEncours(app.user)|length }}</p>
			</div>
			<div class="d-flex align-items-top mb-2">
				<p class="mb-0 text-muted"><i class="fa fa-opencart"></i> Vente au total</p>
				<p class="text-dark mb-0 mt-0 ml-auto">{{ ventes(app.user)|length }}</p>
			</div>
			<div class="d-flex align-items-top">
				<p class="mb-0 text-muted"><i class="fa fa-user-circle"></i> Vendeur</p>
				<p class="text-dark mb-0 mt-0 ml-auto">{{ app.user.created|ago(locale='fr') }}</p>
			</div>
		</div>

	</div>
</div>

{% endblock %}

{% block body %}

<div class="">
	<div class="box shadow-sm rounded bg-white mb-3">
		<div class="box-title p-3 text-left bg-dark rounded">
			<h4 class="mb-0 text-light">
				Informations du compte
			</h4>
		</div>

		<div class="box-body p-3 border-bottom">
			<div class="row">
				<div class="col-sm-6">
					<div class="align-items-top job-item-header pb-2">
						<span class="text-truncate text-muted">Nom(s)</span>
						<h6 class="font-weight-bold text-dark mb-0">{{ app.user.nom }}</h6>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="align-items-top job-item-header pb-2">
						<span class="text-truncate text-muted">Prénom(s)</span>
						<h6 class="font-weight-bold text-dark mb-0">{{ app.user.prenom }}</h6>
					</div>
				</div>
			</div>

			<div class="d-flex align-items-top job-item-header pb-2">
				<div class="mr-2">
					<div class="text-truncate text-muted">Genre</div>
					<h6 class="font-weight-bold text-dark mb-0">{{ app.user.genre ?? 'Non spécifier' }}</h6>
				</div>
			</div>

			<div class="d-flex align-items-top job-item-header pb-2">
				<div class="mr-2">
					<div class="text-truncate text-muted">Email</div>
					<h6 class="font-weight-bold text-dark mb-0">{{ app.user.email }}</h6>
				</div>
			</div>
		</div>
	</div>

	<div class="box shadow-sm rounded bg-white mb-3">
		<div class="box-title border-bottom p-3">
			<h6 class="m-0">Coordonnées</h6>
		</div>
		<div class="box-body p-3 border-bottom">
			<div class="pb-2">
				<div class="mr-2">
					<div class="row">
						<div class="col-sm-6 mb-3">
							<div class="text-truncate text-muted">Adresse</div>
							<h6 class="font-weight-bold text-dark mb-0">{{ app.user.adresse }}</h6>
						</div>
						<div class="col-sm-6 mb-3">
							<div class="text-truncate text-muted">Ville</div>
							<h6 class="font-weight-bold text-dark mb-0">{{ app.user.ville }}</h6>
						</div>
						<div class="col-sm-6 mb-3">
							<div class="text-truncate text-muted">Pays</div>
							<h6 class="font-weight-bold text-dark mb-0">{{ app.user.pays }}</h6>
						</div>
						<div class="col-sm-6 mb-3">
							<div class="text-truncate text-muted">Téléphone</div>
							<h6 class="font-weight-bold text-dark mb-0">{{ app.user.telephone }}</h6>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="box shadow-sm rounded bg-white mb-3">
		<div class="box-title border-bottom p-3">
			<h6 class="m-0">Mes accès</h6>
		</div>
		<div class="box-body p-3 border-bottom">

			<div class="align-items-top job-item-header pb-2">
				<div class="row">
					<div class="col-sm-5">
						<div class="text-truncate text-muted">Mot de passe</div>
						<h6 class="font-weight-bold text-dark mb-0">
							<i class="fa fa-key"></i>****
						</h6>
					</div>
					<div class="col-sm-5 ml-auto text-right">
						<a href="{{ path('edit_password') }}" class="btn btn-outline-dark pl-4 pr-4">
							Mettre à jour
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}