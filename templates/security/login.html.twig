{% extends 'auth.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block titre %}Connexion{% endblock %}

{% block body %}


<div class="text-center mt-3 pb-3">

	{% include "security/_reseaux.html.twig" %}

</div>

<form method="post">
	{% if error %}
	<div class="alert alert-danger">
		Identifiant ou mot de passe incorect
	</div>
	{% endif %}
	<div class="form-group">
		<label class="mb-1" for="inputEmail">Email</label>
		<div class="position-relative icon-form-control">
			<i class="mdi mdi-email-outline position-absolute"></i>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
				autocomplete="email" required autofocus>
		</div>
	</div>
	<div class="form-group">
		<label class="mb-1" for="inputPassword">Mot de passe</label>
		<div class="position-relative icon-form-control">
			<i class="mdi mdi-key-variant position-absolute"></i>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
				required>
		</div>
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

	<div class="custom-control custom-checkbox mb-3">
		<input type="checkbox" class="custom-control-input" name="_remember_me" id="customCheck1">
		<label class="custom-control-label" for="customCheck1">Se souvenir de moi</label>
	</div>
	<button class="btn btn-success btn-block text-uppercase" type="submit">
		Connexion
	</button>
</form>
{% endblock %}