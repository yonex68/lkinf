{% extends 'base.html.twig' %}

{% block title %}Commande enregister
{% endblock %}

{% block titre %}Félicitation {{ app.user.nom }} {{ app.user.prenom }}{% endblock %}

{% block col %}6{% endblock %}

{% block body %}

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 mx-auto">
				<div class="card">
					<div class="card-body text-center">
						<div class="row">
							<div class="col-sm-3 mx-auto text-center">
								<img src="{{ asset('img/order_confirmed.svg') }}" class="img-fluid mt-3" alt="">
							</div>
						</div>
						<div>
							<h6 class="text-center py-3">Félicitation {{ app.user.nom }} {{ app.user.prenom }}</h6>
							<p class="text-muted m-0">Votre commande a bien été enregistrer</p>
							<p>Pour des reclamations et d'autres raisons, vous pouvez nous contacté:</p>
							<a href="mailto:{{ appEmail }}" class="font-weight-bold">{{ appEmail }}</a>
							
							{% if commande.microservice %}
								<div class="py-2">
									<a href="{{ path('commande_details', {id: commande.id}) }}" class="btn btn-dark">Suivre ma commande &longrightarrow;</a>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}