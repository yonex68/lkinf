				</aside>
				<!-- Main Content -->
				<main class="col col-md-8 order-xl-2 order-lg-2 col-12">

					<div class="">
						<div class="row">
							{% for microservice in microservices %}

							<div class="col-12">

								{% include "vendeur/microservices/composants/_bloc_list.html.twig" %}

							</div>

							{% else %}

							<div class="col-12">
								<div class="card">
									<div class="card-body text-center bg-white border rounded shadow-sm">
										<p class="text-muted lead text-center">Aucun service actif.</p>
										<div class="py-4">
											<i class="fa fa-search fa-3x text-muted"></i>
										</div>
										{% if user.id == user.id %}
										<p>Créez-en un nouveau ou activez-les depuis la page Mes services.</p>
										<a href="{{ path('vendeur_microservices_new') }}" class="btn btn-success">
											Nouveau service
										</a>
										{% endif %}
									</div>
								</div>
							</div>

							{% endfor %}

							<div class="col-12">
