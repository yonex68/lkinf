{% extends 'vendeur.html.twig' %}

{% block title %}Tableau de bord
{% endblock %}

{% block bg %}{% endblock %}

{% block sidebar %}

{{ parent() }}

{% endblock %}

{% block body %}

<div class="pb-4">
	<h5 class="h6 bg-dark rounded text-light p-3 mb-3">Tableau de bord</h5>
	{% include "vendeur/portefeuille/composants/_box.html.twig" %}

	{% include "vendeur/abonnement/composants/_box.html.twig" %}
</div>

<div class="">

	<div class="row">
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Services</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ services }}
						</span>
					</div>
				</div>
				<i class="fa fa-briefcase fa-3x text-gray"></i>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Commandes en attente</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ commandes }}
						</span>
					</div>
				</div>
				<i class="fa fa-cart-plus fa-3x text-gray"></i>
			</div>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Avis positif</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ avispositif(app.user)|length }}
						</span>
					</div>
				</div>
				<i class="fa fa-thumbs-up fa-3x text-gray"></i>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Avis n√©gatifs</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ avisnegatif(app.user)|length }}
						</span>
					</div>
				</div>
				<i class="fa fa-thumbs-down fa-3x text-gray"></i>
			</div>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Retrais</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ retraits }}
						</span>
					</div>
					<span>
						{{ retrait.total > 0 ? retrait.total|number_format(2, ',', ' ') : 0 }} {{ currency }} au total
					</span>
				</div>
				<i class="fa fa-credit-card fa-3x text-gray"></i>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="media p-4 shadow-sm rounded">
				<div class="media-body">
					<h5 class="h6">Remboursements</h5>
					<div>
						<span class="h5 font-weight-light">
							{{ remboursements }}
						</span>
					</div>
					<span>
						{{ remboursement.total > 0 ? remboursement.total|number_format(2, ',', ' ') : 0 }} {{ currency }} au total
					</span>
				</div>
				<i class="fa fa-backward fa-3x text-gray"></i>
			</div>
		</div>
	</div>
</div>
{% endblock %}
