<div class="media d-flex align-items-center p-3 mb-3 bg-white rounded shadow-sm">
	{% if microservice.medias|length > 0 %}

	<img class="img-fluid rounded"
		src="{{ vich_uploader_asset(microservice.medias[0], 'imageFile') | imagine_filter('large_avatar') }}" />

	{% else %}

	<img class="img-fluid rounded"
		src="{{ asset('themes/base/images/list/v1.png') | imagine_filter('large_avatar') }}" />

	{% endif %}
	<div class="media-body ml-3">
		<div class="row">
			<div class="col-sm-9">
				<a href="{{ path('microservice_details', {slug: microservice.slug}) }}">
					<h4 class="h6 font-weight-bold text-dark mb-1">{{ microservice.name }}</h4>
				</a>

				<a href="{{ path('microservices_categories', {slug: microservice.categorie.slug}) }}?categories%5B%5D={{ microservice.categorie.id }}"
					class="badge badge-light border badge-pill" style="font-size: .9em!important;">
					#{{ microservice.categorie.name }}
				</a>

				{% if is_granted('microservice_edit', microservice) %}

				<div class="content-info py-3">
					<a href="{{ path('vendeur_microservices_show', {'id': microservice.id}) }}"
						class="btn btn-light">Details</a>
					<a href="{{ path('vendeur_microservices_galerie', {'id': microservice.id}) }}" class="btn btn-light">
						<i class="fa fa-image"></i>&nbsp;Galerie</a>
					<a href="{{ path('vendeur_microservices_titre', {'id': microservice.id}) }}"
						class="btn btn-secondary">Modifier</a>

						{% include "vendeur/microservices/_delete_form.html.twig" %}
				</div>

				{% endif %}
			</div>
			<div class="col-sm-3 text-right">
				<span class="text-muted">A partir de</span>
				<h4 class="h6 mb-1 text-right font-weight-bold">
					{{ microservice.prixMastering ~ currency }}
				</h4>
			</div>
		</div>

	</div>
</div>