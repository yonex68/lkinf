{% extends 'auth.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block titre %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{{ form_start(requestForm) }}
	<div class="form-group">
		<label class="mb-1">Email</label>
		<div class="position-relative icon-form-control">
			{{ form_widget(requestForm.email) }}
		</div>
		{{ form_errors(requestForm.email) }}
	</div>

	<div>
		<p>
			Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
		</p>
	</div>

	<button class="btn btn-success btn-block text-uppercase my-3">Envoyer un e-mail de réinitialisation</button>
	{{ form_end(requestForm) }}
	
{% endblock %}
