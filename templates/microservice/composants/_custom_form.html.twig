{{ form_start(commandeForm) }}
<div class="my-4">
   <div class="card">

      <div class="card-header bg-white border-bottom">
         <h3 id="aboutSeller" class="card-title mt-4">Personnaliser et commander</h3>
      </div>

      <div class="card-body p-0">
         <div class="p-3 bg-light">
            <h5 class="p-2 font-weight-bold">Options suppl√©mentaires</h5>
