<div class="slider mt-4">
	<div id="aniimated-thumbnials" class="slider-for slick-slider-single">
		{% for media in microservice.medias %}

			{% if media.imageName %}

				<a href="{{ vich_uploader_asset(media, 'imageFile') | imagine_filter('medium_size') }}">
					<img class="img-fluid" src="{{ vich_uploader_asset(media, 'imageFile') | imagine_filter('medium_size') }}" alt="{{ media.name }}"/>
				</a>

			{% else %}

				<a href="{{ asset('themes/base/images/list/v1.png') | imagine_filter('medium_size') }}">
					<img class="img-fluid" src="{{ asset('themes/base/images/list/v1.png') | imagine_filter('medium_size') }}" alt="{{ media.name }}"/>
				</a>

			{% endif %}

		{% endfor %}
	</div>
	<div class="slider-nav slick-slider-single pl-4">
		{% for media in microservice.medias %}

			<div class="item-slick">
				<img class="img-fluid" src="{{ vich_uploader_asset(media, 'imageFile') | imagine_filter('small_size') }}" alt="{{ media.name }}">
			</div>

		{% endfor %}
	</div>
</div>
