                  <!-- item-->
                  <a href="{{ path('admin_dashboard') }}" class="dropdown-item">
                     <i class="mdi mdi-chart-pie"></i>
                     <span>Tableau de bord</span>
                  </a>
                  <a href="{{ path('app_admin_services_index') }}" class="dropdown-item">
                     <i class="mdi mdi-briefcase-variant-outline"></i>
