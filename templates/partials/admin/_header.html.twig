                  </a>
                  <a href="{{ path('app_admin_abonnements_index') }}" class="dropdown-item">
                     <i class="mdi mdi-card-account-details-outline"></i>
                     <span>Abonnements</span>
                  </a>
                  <div class="dropdown-divider"></div>
                  <a href="{{ path('app_admin_users_admin') }}" class="dropdown-item">
                     <i class="mdi mdi-account-supervisor-circle-outline"></i>
                     <span>Administrateurs</span>
                  </a>
                  <a href="{{ path('app_admin_users_vendeur') }}" class="dropdown-item">
                     <i class="mdi mdi-account-multiple-check-outline"></i>
                     <span>Vendeurs</span>
                  </a>
                  <a href="{{ path('app_admin_users_client') }}" class="dropdown-item">
                     <i class="mdi mdi-account-multiple-plus-outline"></i>
                     <span>Clients</span>
                  </a>
               </div>
            </div>
         </div>

      </div>

