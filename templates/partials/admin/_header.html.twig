         <!-- full-screen -->
         <div class="dropdown d-none d-lg-inline-block ms-1">
            <button type="button" class="btn header-item noti-icon waves-effect" data-toggle="fullscreen">
               <i class="mdi mdi-fullscreen"></i>
            </button>
         </div>

         <!-- User -->
         <div class="dropdown d-inline-block">
            <button type="button" class="btn header-item waves-effect user-step" id="page-header-user-dropdown"
               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

               {% if app.user.avatar %}

               <img src="{{ vich_uploader_asset(app.user, 'imageFile') | imagine_filter('small_avatar') }}"
                  class="rounded-circle header-profile-user" alt="{{ app.user.prenom }}">

               {% else %}

               <img class="rounded-circle header-profile-user"
                  src="{{ asset('img/user.jpg') | imagine_filter('small_avatar') }}" alt='' />

               {% endif %}

               <span class="d-none d-xl-inline-block ms-1">
                  {{ app.user.usePseudo == 1 ? app.user.pseudo : app.user.usePseudo == 1 ? app.user.pseudo : app.user.nom ~ ' ' ~ app.user.prenom }}
               </span>
               <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-end">
               <!-- item-->
               <a class="dropdown-item" href="{{ path('user_profil') }}">
                  <i class="dripicons-user d-inline-block text-muted me-2"></i> Mon compte
               </a>
               <a class="dropdown-item" href="{{ path('vendeur_achats_index') }}">
                  <i class="mdi mdi-cart-arrow-down d-inline-block text-muted me-2"></i>
                  Mes achats
               </a>

               <a class="dropdown-item" href="{{ path('favoris_index') }}">
                  <i class="fa fa-heart d-inline-block text-muted me-2"></i>
                  Favoris
               </a>

               <a class="dropdown-item" href="{{ path('suivis_index') }}">
                  <i class="fa fa-plus d-inline-block text-muted me-2"></i>
                  Suivis
               </a>

               <div class="dropdown-divider"></div>
               <a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i
                     class="dripicons-exit d-inline-block text-muted me-2"></i>
                  Déconnexion</a>
            </div>
         </div>
      </div>
   </div>
