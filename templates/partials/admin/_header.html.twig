                  </a>
                  <a href="{{ path('app_admin_categories_index') }}" class="dropdown-item">
                     <i class="mdi mdi-buffer"></i>
                     <span>Catégories</span>
                  </a>
                  <a href="{{ path('app_admin_commandes_index') }}" class="dropdown-item">
                     <i class="mdi mdi-cart-arrow-down"></i>
                     <span>Commandes</span>
                  </a>
                  <div class="dropdown-divider"></div>
