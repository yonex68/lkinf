<div class="large-icone">

	{% if app.user.endRegister == true %}

	<div class="box shadow-sm rounded bg-white mb-3">
		<div class="box-title border-bottom p-3">
			<h6 class="m-0 h6">Tableau de Bord</h6>
		</div>
		<div class="box-body">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					{% if is_granted('ROLE_VENDEUR') %}

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_dashboard' ? 'active' : '' }}"
						href="{{ path('vendeur_dashboard') }}">
						<i class="text-muted fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;Tableau de bord
					</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_emplois_temps_index' ? 'active' : '' }}"
