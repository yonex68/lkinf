<div class="large-icone mb-3">

	{% if is_granted('ROLE_VENDEUR') %}

	{% if app.user.endRegister == true %}

	<div class="card mb-3">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Tableau de Bord</h6>
		</div>
		<div class="card-body p-0">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_dashboard' ? 'active' : '' }}"
						href="{{ path('vendeur_dashboard') }}">
						<i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;Accueil
					</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_emplois_temps_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_emplois_temps_index') }}">
						<i class="fa fa-calendar"></i>&nbsp;&nbsp;&nbsp;Planning
					</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_microservices_index' ? 'active' : '' }}"
						href="{{ path('vendeur_microservices_index') }}">
						<i class="fa fa-briefcase"></i>&nbsp;&nbsp;&nbsp;Mes services
					</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_realisation_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_realisation_index') }}">
						<i class="fa fa-folder-open"></i>&nbsp;&nbsp;&nbsp;Mes réalisations
					</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_commandes_index' ? 'active' : '' }}"
						href="{{ path('vendeur_commandes_index') }}"><i
							class="text-muted fa fa-cart-plus"></i>&nbsp;&nbsp;&nbsp;Mes commandes</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_achats_index' ? 'active' : '' }}"
						href="{{ path('vendeur_achats_index') }}"><i
							class="text-muted fa fa-opencart"></i>&nbsp;&nbsp;&nbsp;Mes achats</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'favoris_index' ? 'active' : '' }}"
						href="{{ path('favoris_index') }}"><i class="fa fa-heart"></i>&nbsp;&nbsp;&nbsp;Favoris</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'suivis_index' ? 'active' : '' }}"
						href="{{ path('suivis_index') }}"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Suivis</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_remboursements_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_remboursements_index') }}"><i
							class="text-muted fa fa-backward"></i>&nbsp;&nbsp;&nbsp;Remboursements</a>
				</div>
			</div>
		</div>
	</div>

	{% endif %}

	{% else %}

	<div class="card mb-3">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Tableau de Bord</h6>
		</div>
		<div class="card-body p-0">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_achats_index' ? 'active' : '' }}"
						href="{{ path('vendeur_achats_index') }}"><i
							class="text-muted fa fa-opencart"></i>&nbsp;&nbsp;&nbsp;Mes achats</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'favoris_index' ? 'active' : '' }}"
						href="{{ path('favoris_index') }}"><i class="fa fa-heart"></i>&nbsp;&nbsp;&nbsp;Favoris</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'suivis_index' ? 'active' : '' }}"
						href="{{ path('suivis_index') }}"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Suivis</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_remboursements_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_remboursements_index') }}"><i
							class="text-muted fa fa-backward"></i>&nbsp;&nbsp;&nbsp;Remboursements</a>
				</div>
			</div>
		</div>
	</div>

	{% endif %}

	{% if is_granted('ROLE_VENDEUR') %}

	{% if app.user.endRegister == true %}

	<div class="card mb-3">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Mon portefeuille</h6>
		</div>
		<div class="card-body p-0">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_portefeuille' ? 'active' : '' }}"
						href="{{ path('vendeur_portefeuille') }}"><i
							class="text-muted fa fa-credit-card"></i>&nbsp;&nbsp;&nbsp;Mes revenus</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_retraits_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_retraits_index') }}"><i
							class="text-muted fa fa-user-circle"></i>&nbsp;&nbsp;&nbsp;Retraits</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'stripe_abonnement_services' ? 'active' : '' }}"
						href="{{ path('stripe_abonnement_services') }}"><i
							class="text-muted fa fa-globe"></i>&nbsp;&nbsp;&nbsp;Mon abonnement</a>
				</div>
			</div>
		</div>
	</div>

	{% endif %}

	{% endif %}

	{% if is_granted('ROLE_VENDEUR') %}

	{% if app.user.endRegister == null %}

	<div class="alert alert-warning">
		<p><i class="fa fa-exclamation-triangle"></i> Veuillez completter votre profil avant de vendre vos prestations il
			s'agit de:</p>
		<p>1 - Vos coordonnées <br> 2 - Autres infos </p>
	</div>

	{% endif %}

	{% endif %}


	<div class="card rounded bg-white">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Paramètres {{ is_granted('ROLE_VENDEUR') ? 'de vente' : '' }}</h6>
		</div>
		<div class="card-body p-0">
			<div class="dropdown-menu-show">

				<a class="dropdown-item py-2 tache-terminer {{ app.request.attributes.get('_route') == 'user_profil' ? 'active' : '' }}"
					href="{{ path('user_profil') }}"><i class="fa fa-user-circle"></i>&nbsp;&nbsp;&nbsp;Mon
					profil {{ is_granted('ROLE_VENDEUR') ? 'public' : '' }}
					<i class="fa fa-check-circle float-right"></i>
				</a>

				{% if is_granted('ROLE_VENDEUR') %}

				<a class="dropdown-item py-2 {{ app.user.statut ? 'tache-terminer' : 'tache-encours' }} {{ app.request.attributes.get('_route') == 'user_coordonnees' ? 'active' : '' }}"
					href="{{ path('user_coordonnees') }}"><i class="fa fa-edit"></i>&nbsp;&nbsp;&nbsp;Mes
					coordonnées
					<i class="fa fa-check-circle float-right"></i>
				</a>

				<a class="dropdown-item py-2 {{ app.user.lieuPrestation ? 'tache-terminer' : 'tache-encours' }} {{ app.user.statut ? '' : 'disabled' }} {{ app.request.attributes.get('_route') == 'user_categorie' ? 'active' : '' }}"
					href="{{ path('user_categorie') }}"><i class="text-muted fa fa-info-circle"></i>&nbsp;&nbsp;&nbsp;Lieu de prestation, couverture..
					<i class="fa fa-check-circle float-right"></i>
				</a>

				<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'edit_password' ? 'active' : '' }}"
					href="{{ path('edit_password') }}"><i class="fa fa-key"></i>&nbsp;&nbsp;&nbsp;Mes accès</a>

				{% endif %}
			</div>
		</div>
	</div>

</div>