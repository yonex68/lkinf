			<h6 class="m-0 h6">Paramètres {{ is_granted('ROLE_VENDEUR') ? 'de vente' : '' }}</h6>
		</div>
		<div class="box-body">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'user_profil' ? 'active' : '' }}"
						href="{{ path('user_profil') }}"><i class="text-muted fa fa-user-circle"></i>&nbsp;&nbsp;&nbsp;Mon profil {{ is_granted('ROLE_VENDEUR') ? 'public' : '' }}</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'user_categorie' ? 'active' : '' }}" href="{{ path('user_categorie') }}"><i class="text-muted fa fa-info-circle"></i>&nbsp;&nbsp;&nbsp;Autres infos</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'user_coordonnees' ? 'active' : '' }}"
						href="{{ path('user_coordonnees') }}"><i
							class="text-muted fa fa-edit"></i>&nbsp;&nbsp;&nbsp;Mes coordonnées</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'edit_password' ? 'active' : '' }}"
						href="{{ path('edit_password') }}"><i class="text-muted fa fa-key"></i>&nbsp;&nbsp;&nbsp;Mes accès</a>
