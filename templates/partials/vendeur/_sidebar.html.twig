	{% if is_granted('ROLE_VENDEUR') %}

	{% if app.user.endRegister == true %}

	<div class="card mb-3">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Espace membre</h6>
		</div>
		<div class="card-body p-0">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">
					<a class="dropdown-item {{ app.request.attributes.get('_route') == 'user_dashboard' ? 'active' : '' }}" href="{{ path('user_dashboard') }}">
						<i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;Tableau de bord
					</a>

					{% include "partials/vendeur/_menu.html.twig" %}
					
				</div>
			</div>
		</div>
	</div>

	{% endif %}

	{% else %}

	<div class="card mb-3">
		<div class="card-header bg-dark">
			<h6 class="m-0 h6 text-light">Espace membre</h6>
		</div>
		<div class="card-body p-0">
			<div class="bg-white rounded shadow-sm">
				<div class="dropdown-menu-show">

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'user_dashboard' ? 'active' : '' }}"
						href="{{ path('user_dashboard') }}"><i
							class="text-muted fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;Tableau de bord</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'vendeur_achats_index' ? 'active' : '' }}"
