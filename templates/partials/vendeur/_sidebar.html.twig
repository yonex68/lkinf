							class="text-muted fa fa-opencart"></i>&nbsp;&nbsp;&nbsp;Mes achats</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'favoris_index' ? 'active' : '' }}"
						href="{{ path('favoris_index') }}"><i class="fa fa-heart"></i>&nbsp;&nbsp;&nbsp;Favoris</a>

					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'suivis_index' ? 'active' : '' }}"
						href="{{ path('suivis_index') }}"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Suivis</a>
					<a class="dropdown-item py-2 {{ app.request.attributes.get('_route') == 'app_vendeur_remboursements_index' ? 'active' : '' }}"
						href="{{ path('app_vendeur_remboursements_index') }}"><i
							class="text-muted fa fa-backward"></i>&nbsp;&nbsp;&nbsp;Remboursements</a>
				</div>
			</div>
		</div>
	</div>

	{% endif %}

	{% if is_granted('ROLE_VENDEUR') %}

	{% if app.user.endRegister == true %}

