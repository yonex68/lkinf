{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
    <h1>Rapport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fichier</th>
                <th>Contenu</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.id }}</td>
                <td>{{ rapport.fichier }}</td>
                <td>{{ rapport.contenu }}</td>
                <td>{{ rapport.created ? rapport.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rapport.updated ? rapport.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_rapports_show', {'id': rapport.id}) }}">show</a>
                    <a href="{{ path('app_admin_rapports_edit', {'id': rapport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_rapports_new') }}">Create new</a>
{% endblock %}
