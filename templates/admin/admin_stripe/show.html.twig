{% extends 'admin.html.twig' %}

{% block title %}Stripe{% endblock %}

{% block body %}
    <h1>Stripe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stripe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stripe.name }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ stripe.tarif }}</td>
            </tr>
            <tr>
                <th>StripeKey</th>
                <td>{{ stripe.stripeKey }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ stripe.created ? stripe.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ stripe.updated ? stripe.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_stripe_index') }}">back to list</a>

    <a href="{{ path('app_admin_stripe_edit', {'id': stripe.id}) }}">edit</a>

    {{ include('admin_stripe/_delete_form.html.twig') }}
{% endblock %}
