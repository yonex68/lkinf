<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
        <div class="form-group py-3">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group py-3">
            {{ form_row(form.tarif) }}
        </div>
        <div class="form-group py-3">
            {{ form_row(form.stripeKey) }}
        </div>
        <div class="form-group py-3">
            {{ form_row(form.description) }}
        </div>
        <div class="row">
            <div class="col-1">
                {{ form_widget(form.hexColor) }}
            </div>
            <div class="col-11">

                <p>Choisir une couleur pour les statistiques au niveau du tableau de bord</p>

            </div>
        </div>{{ form_errors(form.hexColor) }}

        <div class="form-group py-3">
            {{ form_rest(form) }}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>
    {% if stripe.id %}
    <div class="card-footer bg-white">
        {{ include('admin/admin_stripe/_delete_form.html.twig') }}
    </div>
    {% endif %}
</div>