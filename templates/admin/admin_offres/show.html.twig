{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offre.name }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ offre.tarif }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ offre.imageName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ offre.created ? offre.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ offre.updated ? offre.updated|date('Y-m-d H:i:s') : '' }}</td>
