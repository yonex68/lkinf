<div class="card">
    <div class="card-body">

        {{ form_start(form) }}

        <div class="form-group py-3">

            {{ form_row(form.name) }}

        </div>

        <div class="form-group py-3">

            {{ form_row(form.imageFile) }}

        </div>

        <div class="form-group py-3">

            {{ form_row(form.description) }}

        </div>

        <div class="form-group py-3">

            <div class="row">
                <div class="col-1">

                    {{ form_widget(form.hexColor) }}

                </div>
                <div class="col-11">

                    <p>Choisir une couleur pour les statistiques au niveau du tableau de bord</p>

                </div>
            </div>{{ form_errors(form.hexColor) }}

        </div>

        {{ form_rest(form) }}

        <div class="form-group py-3">
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>

        {{ form_end(form) }}

        {% if categorie.id %}
        {{ include('admin/admin_categories/_delete_form.html.twig') }}
        {% endif %}

    </div>
</div>