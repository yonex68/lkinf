{% extends 'admin.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>HexColor</th>
                <td>{{ categorie.hexColor }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ categorie.created ? categorie.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ categorie.updated ? categorie.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_categories_index') }}">back to list</a>

    <a href="{{ path('app_admin_categories_edit', {'id': categorie.id}) }}">edit</a>

    {{ include('admin/admin_categories/_delete_form.html.twig') }}
{% endblock %}
