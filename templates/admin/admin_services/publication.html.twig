{% extends 'admin.html.twig' %}

{% block pageTitle %}Nouveau service{% endblock %}

{% block body %}
<div class="row">
	<div class="col-12">
		<!-- Left sidebar -->
		{% include "admin/admin_services/composants/_step.html.twig" %}

		<!-- Right Sidebar -->
		<div class="email-rightbar">
			<div class="card d-block">
				<div class="card-body d-block">

					{{ form_start(form) }}
					<h6 class="font-weight-bold">Publication</h6>
					<p class="text-muted">
				{% if microservice.online == 1 %}
					Ce servise est déjà publié sur <strong>{{ appName }}</strong>.
					Vous pouvez également revenir sur les étapes précédentes pour effectuer une modification.
				{% else %}
					Vous y êtes presque ! Avant qu’un membre de notre équipe de modération ne relise votre service, nous vous invitons à jeter un dernier coup d’œil à celui-ci. Vous pouvez également revenir sur les étapes précédentes pour effectuer une modification. J'atteste…
				{% endif %}
				</p>

					<div class="{{ microservice.online == true ? 'bloc-masquer' : '' }}">

						<div class="my-3 font-weight-bold">
							{{ form_widget(form) }}
						</div>

						<div class="">
							<button class="btn btn-primary" formnovalidate>
								{{ button_label|default('Publier') }}
							</button>
						</div>

					</div>

					{{ form_end(form) }}

				</div>
			</div> <!-- panel -->

		</div> <!-- end Col -->
	</div>
</div><!-- End row -->

{% endblock %}

{% block javascripts %}

{{ parent() }}

{% include "admin/admin_services/composants/_tarif_script.html.twig" %}

{% endblock %}