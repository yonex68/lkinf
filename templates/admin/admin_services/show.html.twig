{% extends 'base.html.twig' %}

{% block title %}Microservice{% endblock %}

{% block body %}
    <h1>Microservice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ microservice.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ microservice.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ microservice.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ microservice.description }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ microservice.online ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Delai</th>
                <td>{{ microservice.delai }}</td>
            </tr>
            <tr>
                <th>PrixMastering</th>
                <td>{{ microservice.prixMastering }}</td>
            </tr>
            <tr>
                <th>PrixMixage</th>
                <td>{{ microservice.prixMixage }}</td>
            </tr>
            <tr>
                <th>PrixBeatmaking</th>
                <td>{{ microservice.prixBeatmaking }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ microservice.created ? microservice.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ microservice.updated ? microservice.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_services_index') }}">back to list</a>

    <a href="{{ path('app_admin_services_edit', {'id': microservice.id}) }}">edit</a>

    {{ include('admin_services/_delete_form.html.twig') }}
{% endblock %}
